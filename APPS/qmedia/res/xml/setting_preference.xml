<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <PreferenceCategory android:title="HDMI Out Primary">

        <androidx.preference.ListPreference
            android:defaultValue="None"
            android:entries="@array/input_source"
            android:entryValues="@array/input_source"
            android:key="hdmi_1_source"
            android:summary="%s"
            android:title="Source" />

        <androidx.preference.ListPreference
            android:defaultValue="1"
            android:entries="@array/decode_instance"
            android:entryValues="@array/decode_instance"
            android:key="hdmi_1_decoder_instance"
            android:summary="%s"
            android:title="Decoder Instance" />

        <androidx.preference.ListPreference
            android:defaultValue="SF"
            android:entries="@array/compose_view_type"
            android:entryValues="@array/compose_view_type"
            android:key="hdmi_1_compose_view"
            android:summary="%s"
            android:title="Compose Type" />

        <androidx.preference.ListPreference
            android:defaultValue="0"
            android:entries="@array/camera_ids"
            android:entryValues="@array/camera_ids"
            android:key="hdmi_1_camera_id"
            android:summary="%s"
            android:title="Camera ID" />

    </PreferenceCategory>

    <PreferenceCategory android:title="HDMI Out 2">

        <androidx.preference.ListPreference
            android:defaultValue="None"
            android:entries="@array/input_source"
            android:entryValues="@array/input_source"
            android:key="hdmi_2_source"
            android:summary="%s"
            android:title="Source" />

        <androidx.preference.ListPreference
            android:defaultValue="1"
            android:entries="@array/decode_instance"
            android:entryValues="@array/decode_instance"
            android:key="hdmi_2_decoder_instance"
            android:summary="%s"
            android:title="Decoder Instance" />

        <androidx.preference.ListPreference
            android:defaultValue="SF"
            android:entries="@array/compose_view_type"
            android:entryValues="@array/compose_view_type"
            android:key="hdmi_2_compose_view"
            android:summary="%s"
            android:title="Compose Type" />

        <androidx.preference.ListPreference
            android:defaultValue="0"
            android:entries="@array/camera_ids"
            android:entryValues="@array/camera_ids"
            android:key="hdmi_2_camera_id"
            android:summary="%s"
            android:title="Camera ID" />

    </PreferenceCategory>

    <PreferenceCategory android:title="HDMI Out 3">

        <androidx.preference.ListPreference
            android:defaultValue="None"
            android:entries="@array/input_source"
            android:entryValues="@array/input_source"
            android:key="hdmi_3_source"
            android:summary="%s"
            android:title="Source" />

        <androidx.preference.ListPreference
            android:defaultValue="1"
            android:entries="@array/decode_instance"
            android:entryValues="@array/decode_instance"
            android:key="hdmi_3_decoder_instance"
            android:summary="%s"
            android:title="Decoder Instance" />

        <androidx.preference.ListPreference
            android:defaultValue="SF"
            android:entries="@array/compose_view_type"
            android:entryValues="@array/compose_view_type"
            android:key="hdmi_3_compose_view"
            android:summary="%s"
            android:title="Compose Type" />

        <androidx.preference.ListPreference
            android:defaultValue="0"
            android:entries="@array/camera_ids"
            android:entryValues="@array/camera_ids"
            android:key="hdmi_3_camera_id"
            android:summary="%s"
            android:title="Camera ID" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Version">
        <androidx.preference.EditTextPreference
            android:key="version_info"
            android:summary="" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
